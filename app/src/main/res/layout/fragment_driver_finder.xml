<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/driver_frame">

    <android.support.v7.widget.GridLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/find_draver_gridlayout">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From:"
            app:layout_row="0"
            app:layout_column="0"
            android:textSize="24sp"
            app:layout_rowWeight="1"
            />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="1"
            android:text="To:"
            android:textSize="24sp"
            app:layout_rowWeight="1"

            />

        <Spinner
            android:id="@+id/fromSpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="0"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"

            />

        <Spinner
            android:id="@+id/toSpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"

            />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="2"
            android:text="Time:"
            android:textSize="24sp"
            app:layout_rowWeight="1"

            />

        <Spinner
            android:id="@+id/timeSpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="2"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"

            />

        <Button
            android:id="@+id/findDriverButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="3"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/finddrivericon"
            android:gravity="center"
            android:text="FIND DRIVER"
            android:textColor="@color/white"
            app:layout_rowWeight="1"

            />

    </android.support.v7.widget.GridLayout>
</FrameLayout>
