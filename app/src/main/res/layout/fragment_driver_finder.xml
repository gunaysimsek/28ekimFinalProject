<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gsimsek13.a28ekimfinalproject.DriverFinderFragment"
    android:id="@+id/driver_frame">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/find_draver_gridlayout">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="To:"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/fromSpin"
            android:layout_width="131dp"
            android:layout_height="31dp"
            android:layout_column="3"
            android:layout_row="0" />

        <Spinner
            android:id="@+id/toSpin"
            android:layout_width="131dp"
            android:layout_height="31dp"
            android:layout_column="3"
            android:layout_row="1" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Time:"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/timeSpin"
            android:layout_width="131dp"
            android:layout_height="31dp"
            android:layout_column="3"
            android:layout_row="2" />

        <Button
            android:id="@+id/findDriverButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="FIND DRIVER" />

    </GridLayout>

</FrameLayout>
