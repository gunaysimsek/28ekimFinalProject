<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="59dp"
            android:layout_height="33dp"
            android:layout_marginTop="32dp"
            android:text="From:"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="1dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="59dp"
            android:layout_height="33dp"
            android:layout_marginTop="24dp"
            android:text="To:"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            tools:layout_editor_absoluteX="1dp" />

        <Spinner
            android:id="@+id/fromSpinner"
            android:layout_width="131dp"
            android:layout_height="31dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/toSpinner"
            android:layout_width="131dp"
            android:layout_height="31dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/fromSpinner" />

        <Button
            android:id="@+id/from_to_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="56dp"
            android:text="Select"
            app:layout_constraintBottom_toTopOf="@+id/rightLinearLayout"
            app:layout_constraintStart_toEndOf="@+id/fromSpinner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <GridLayout
            android:id="@+id/Make_Reservation_GridLayout"
            android:layout_width="368dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toSpinner">

            <TextView
                android:id="@+id/Available_Seats_TextView"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="Available Seats" />

            <TextView
                android:id="@+id/Time_TextView"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:text="Time" />

            <TextView
                android:id="@+id/Price_TextView"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="0"
                android:text="Price" />

            <TextView
                android:id="@+id/Make_Reservation_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="0"
                android:text="Make Reservation" />

        </GridLayout>

        <LinearLayout
            android:id="@+id/leftLinearLayout"
            android:layout_width="115dp"
            android:layout_height="298dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/centerLeftLinearLayout"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Make_Reservation_GridLayout"></LinearLayout>

        <LinearLayout
            android:id="@+id/centerLeftLinearLayout"
            android:layout_width="53dp"
            android:layout_height="298dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/centerRightLinearLayout"
            app:layout_constraintTop_toBottomOf="@+id/Make_Reservation_GridLayout"></LinearLayout>

        <LinearLayout
            android:id="@+id/rightLinearLayout"
            android:layout_width="106dp"
            android:layout_height="298dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Make_Reservation_GridLayout"></LinearLayout>

        <LinearLayout
            android:id="@+id/centerRightLinearLayout"
            android:layout_width="55dp"
            android:layout_height="298dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/rightLinearLayout"
            app:layout_constraintTop_toBottomOf="@+id/Make_Reservation_GridLayout"></LinearLayout>


    </android.support.constraint.ConstraintLayout>
</LinearLayout>
