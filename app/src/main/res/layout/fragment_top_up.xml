<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gsimsek13.a28ekimfinalproject.TopUpFragment"
    android:background="@color/white">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <EditText
            android:id="@+id/topUpCreditName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"

            app:layout_columnSpan="2"
            app:layout_columnWeight="1"

            app:layout_row="0"

            app:layout_rowWeight="1"

            android:textSize="12sp"

            android:hint="Name"

            android:inputType="textPersonName"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <EditText
            android:id="@+id/topUpCreditSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            android:textSize="12sp"

            app:layout_columnSpan="2"
            app:layout_columnWeight="1"

            app:layout_row="1"

            app:layout_rowWeight="1"

            android:hint="Surname"

            android:inputType="textPersonName"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <EditText
            android:id="@+id/topUpCreditNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_columnSpan="2"

            app:layout_columnWeight="1"
            android:textSize="12sp"

            app:layout_row="2"

            app:layout_rowWeight="1"

            android:hint="Credit Card Number"

            android:inputType= "number"

            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <EditText
            android:id="@+id/topUpCreditLastDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"

            app:layout_columnWeight="1"
            android:textSize="12sp"

            app:layout_row="3"

            app:layout_rowWeight="1"

            android:hint="Expiration Date"

            android:inputType= "date"

            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <EditText
            android:id="@+id/topUpCreditCvc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"

            app:layout_columnWeight="1"
            android:textSize="12sp"

            app:layout_row="3"

            app:layout_rowWeight="1"

            android:hint="CVC"

            android:inputType= "numberPassword"

            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />


        <EditText
            android:id="@+id/topUpCreditAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_columnSpan="2"
            android:textSize="12sp"

            app:layout_columnWeight="1"

            app:layout_row="4"

            app:layout_rowWeight="1"

            android:hint="â‚º"

            android:inputType= "number"


            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />


        <Button
            android:id="@+id/topUpSendBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_gravity="center"
            app:layout_column="0"
            app:layout_row="5"
            app:layout_columnSpan="2"
            android:text="Accept"
            app:layout_rowWeight="5"
            android:textSize="12sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"

            />




    </android.support.v7.widget.GridLayout>
</FrameLayout>
