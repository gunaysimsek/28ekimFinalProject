<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gsimsek13.a28ekimfinalproject.ChangePasswordFragment">


    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"

        android:orientation="vertical"
        android:rowCount="4"

        >

        <EditText
            android:id="@+id/changePasswordOldPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"

            android:layout_row="0"
            android:layout_rowWeight="1"
            android:gravity="center_vertical"
            android:inputType="textPassword"

            android:hint="Old Password" />


        <EditText
            android:id="@+id/changePasswordPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"

            android:layout_row="1"
            android:layout_rowWeight="1"
            android:gravity="center_vertical"
            android:inputType="textPassword"

            android:hint="New Password" />

        <EditText
            android:id="@+id/changePasswordValidPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:inputType="textPassword"

            android:layout_row="2"
            android:layout_rowWeight="1"
            android:gravity="center_vertical"

            android:hint="Please rewrite your new password" />

        <Button
            android:id="@+id/changePasswordBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="3"

            android:layout_rowWeight="10"
            android:text="Change Password" />








    </GridLayout>
</FrameLayout>
