<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.gsimsek13.a28ekimfinalproject.ChangePasswordFragment">


    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"

        >
        <EditText
            android:id="@+id/changePasswordOldPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"

            app:layout_row="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:gravity="center_vertical"
            android:inputType="textPassword"

            android:hint="Old Password" />


        <EditText
            android:id="@+id/changePasswordPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_columnWeight="1"

            app:layout_row="1"
            app:layout_rowWeight="1"
            android:gravity="center_vertical"
            android:inputType="textPassword"

            android:hint="New Password" />

        <EditText
            android:id="@+id/changePasswordValidPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            android:inputType="textPassword"
            app:layout_columnWeight="1"

            app:layout_row="2"
            app:layout_rowWeight="1"
            android:gravity="center_vertical"

            android:hint="Please rewrite your new password" />

        <Button
            android:id="@+id/changePasswordBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="3"
            app:layout_columnWeight="1"

            app:layout_rowWeight="10"
            android:text="Change Password"

            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            />





    </android.support.v7.widget.GridLayout>


</FrameLayout>
