<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gsimsek13.a28ekimfinalproject.TakePaymentFragment">

    <!-- TODO: Update blank fragment layout -->


    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:columnCount="2"
        android:rowCount="4"
        >


        <TextView
            android:id="@+id/takePaymentFromTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"

            android:layout_row="0"
            android:layout_rowWeight="1"
            android:gravity="center_vertical"


            android:text="From" />

        <Spinner
            android:id="@+id/takeFromSpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <TextView
            android:id="@+id/takePaymentToTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"

            android:layout_row="1"
            android:layout_rowWeight="1"
            android:gravity="center_vertical"


            android:text="To" />


        <Spinner
            android:id="@+id/takeToSpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <TextView
            android:id="@+id/takePaymentTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"

            android:layout_row="2"
            android:layout_rowWeight="1"
            android:gravity="center_vertical"


            android:text="Time" />


        <Spinner
            android:id="@+id/takeTimeSpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />


        <Button
            android:id="@+id/takeQrBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Take Payment"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_rowWeight="10"
            android:layout_columnSpan="2"
            />

    </GridLayout>

</FrameLayout>
