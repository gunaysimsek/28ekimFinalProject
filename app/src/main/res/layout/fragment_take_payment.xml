<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.gsimsek13.a28ekimfinalproject.TakePaymentFragment"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->


    <android.support.v7.widget.GridLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <TextView
            android:id="@+id/takePaymentFromTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"


            app:layout_row="0"
            app:layout_rowWeight="1"
            android:gravity="center_vertical"


            android:text="From" />

        <Spinner
            android:id="@+id/takeFromSpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            />

        <TextView
            android:id="@+id/takePaymentToTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"

            app:layout_row="1"
            app:layout_rowWeight="1"
            android:gravity="center_vertical"


            android:text="To" />


        <Spinner
            android:id="@+id/takeToSpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            />

        <TextView
            android:id="@+id/takePaymentTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"

            app:layout_row="2"
            app:layout_rowWeight="1"
            android:gravity="center_vertical"


            android:text="Time" />


        <Spinner
            android:id="@+id/takeTimeSpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="2"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            />


        <Button
            android:id="@+id/takeQrBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_gravity="center"
            android:text="Take Payment"
            app:layout_column="0"
            app:layout_row="3"
            app:layout_rowWeight="10"
            app:layout_columnSpan="2"

            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            />

    </android.support.v7.widget.GridLayout>

</FrameLayout>
