<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gsimsek13.a28ekimfinalproject.OfflineTakePaymentFragment">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/offlineTakePaymentFromTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"


            app:layout_row="0"
            app:layout_rowWeight="1"
            android:gravity="center_vertical"


            android:text="From" />

        <Spinner
            android:id="@+id/offlineTakeFromSpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            />

        <TextView
            android:id="@+id/offlineTakePaymentToTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"

            app:layout_row="1"
            app:layout_rowWeight="1"
            android:gravity="center_vertical"


            android:text="To" />


        <Spinner
            android:id="@+id/offlineTakeToSpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            />

        <TextView
            android:id="@+id/offlineTakePaymentTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"

            app:layout_row="2"
            app:layout_rowWeight="1"
            android:gravity="center_vertical"


            android:text="Time" />



        <Spinner
            android:id="@+id/offlineTakeTimeSpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="2"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            />




        <EditText
            android:id="@+id/offlineTakeEmailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            app:layout_column="0"
            app:layout_row="4"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            app:layout_columnSpan="2"
            />

        <EditText
            android:id="@+id/offlineTakePasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            app:layout_row="5"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            app:layout_columnSpan="2"
            app:layout_column="0"

            />



        <Button
            android:id="@+id/offlineTakeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take Payment"
            app:layout_gravity="center"

            app:layout_column="0"
            app:layout_row="6"
            app:layout_rowWeight="10"
            app:layout_columnSpan="2"
            />



    </android.support.v7.widget.GridLayout>

</FrameLayout>
